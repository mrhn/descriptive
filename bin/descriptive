#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

require __DIR__ . '/../src/bootstrap.php';

if (PHP_SAPI !== 'cli') {
    echo 'Warning: Descriptive should be invoked via the CLI version of PHP, not the ' . PHP_SAPI . ' SAPI'
        . PHP_EOL;
}

$application = new Application();
$application->setName('Descriptive');
$application->setVersion('dev'); // TODO get tag/commit

$application->run();
